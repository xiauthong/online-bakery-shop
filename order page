    <script>
        
        var orderData=[
            {productName:"Coconut Bun",quantity:0,price:3.40},
            {productName:"Bagel",quantity:0,price:2.00},
            {productName:"Cheese Cake",quantity:0,price:15.00},
            {productName:"Cookies",quantity:0,price:3.00},
            {productName:"Croissant",quantity:0,price:2.50},
            {productName:"Cupcakes",quantity:0,price:5.00},
            {productName:"Fruit Tart",quantity:0,price:6.00},
            {productName:"Loaf",quantity:0,price:2.50},


        ];

        function populateOrderTable(){
            var orderBody=document.getElementById("orderBody");

            orderBody.innerHTML="";

            orderData.forEach(function(item){
                var row=document.createElement("tr");
                row.innerHTML=`
                <td>${item.productName}</td>
                <td><input type="number" class="quantityInput" value="${item.quantity}" onchange="updateTotal(this)"></td>
                <td>${item.price.toFixed(2)}</td>
                <td>${(item.quantity*item.price).toFixed(2)}</td>
                `;
                orderBody.appendChild(row);
            })
        }

        function calculateTotal(){
            var total=0;
            var amountPaid=0;

            var rows=document.querySelectorAll("#productTable tbody tr");
            rows.forEach(function(row){
                var totalPrice=parseFloat(row.cells[3].innerHTML);
                total+=totalPrice
            })

            amountPaid=50;

            var balance=total-amountPaid;

            document.getElementById("total").value=total.toFixed(2);
            document.getElementById("amount").value=amountPaid.toFixed(2);
            document.getElementById("balance").value=balance.toFixed(2);

        }

        function payClicked(action){
            if(action==="Pay"){
                alert("Payment Proceed!")
            }
            else if(action==="Cancel"){
                alert("Payment Cancelled!")
            }
           
        }

        function updateTotal(input){
            var row=input.closest("tr");
            var quantity=parseInt(input.value,10);
            var price=parseFloat(row.cells[2].innerText);
            var totalPrice=quantity*price;
            row.cells[3].innerText=totalPrice.toFixed(2);


            calculateTotal();
        }

        document.addEventListener("DOMContentLoaded",function(){
            populateOrderTable();
            calculateTotal();
        })

    </script>


    

